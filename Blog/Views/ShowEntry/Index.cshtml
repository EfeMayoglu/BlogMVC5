@model Blog.Models.BlogEntry
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-color:rgba(98, 172, 252, 0.76); color:#ffffff; max-width:800px" >
    <h2>@Model.Title</h2>
</div>

<div style="align-self:center; width:auto; max-width:800px; align-self:center">
    <!--<h2 style="font-size:36px">@Model.Title</h2> -->
    <p class="text-muted">Author: @Model.UserName</p>
    <p style="font-size:24px; text-align:justify">@Html.Raw(Model.Entry)</p>
    <p class="text-muted">@Model.EntryDate</p>
</div>

